{
  "name": "quran-explorer",
  "version": "0.0.0-semantic-release",
  "description": "Explore the Quran",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha src/__tests__/**/*.test.js",
    "coverage": "istanbul cover -x src/**/*.test.js _mocha -- -R spec src/**/*.test.js",
    "check-coverage": "istanbul check-coverage --statements 75 --branches 75 --functions 75 --lines 75",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test:watch": "mocha src/__tests__/**/*.test.js -w",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hamzapurra/quran-explorer.git"
  },
  "keywords": [
    "quran"
  ],
  "author": "Hamza M. Purra <gm00cell@gmail.com> (http://hamzapurra.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hamzapurra/quran-explorer/issues"
  },
  "homepage": "https://github.com/hamzapurra/quran-explorer#readme",
  "devDependencies": {
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.8.6",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "1.3.2",
    "istanbul": "0.4.5",
    "mocha": "3.1.2",
    "semantic-release": "^6.3.2",
    "semantic-release-cli": "3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test && npm run coverage && npm run check-coverage"
    }
  }
}
